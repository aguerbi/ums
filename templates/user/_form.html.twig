{{ form_start(form) }}
<div class="form-row">
    <div class="col-md-4">
        {{ form_row(form.username) }}
    </div>
</div>
<div class="form-row">
    <div class="col-md-4">
        {{ form_row(form.fullname) }}
    </div>
</div>
<div class="form-row">
    <div class="col-md-4">
        {{ form_row(form.email) }}
    </div>
</div>
<div class="form-row">
    <div class="col-md-4">
        {{ form_row(form.password) }}
    </div>
</div>
<button class="btn btn-primary"><i class="fas fa-pencil-alt"></i> {{ button_label|default('Ajouter utilisateur') }}</button>
{{ form_end(form) }}
