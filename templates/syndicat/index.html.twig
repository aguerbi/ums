{% extends 'base.html.twig' %}

{% block title %}Liste des syndicats{% endblock %}

{% block body %}
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Liste des syndicats</h1>
    </div>
    <form class="col-md-4 float-right" role="search" methode="get">
        <div class="input-group mb-3">
            <input type="search" class="form-control" placeholder="Nom" name="search">
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit" id="button-addon2"><i class="fas fa-search"></i></button>
            </div>
        </div>
    </form>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nom</th>
            </tr>
        </thead>
        <tbody>
            {% for syndicat in syndicats %}
                <tr>
                    <td>{{ syndicat.name }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="table-danger text-center text-danger">Aucun enregistrement trouv√©</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(syndicats) }}
    </div>
{% endblock %}
