{% extends 'base.html.twig' %}

{% block title %}Card{% endblock %}

{% block body %}
    <h1>Card</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ card.id }}</td>
            </tr>
            <tr>
                <th>NumberCard</th>
                <td>{{ card.numberCard }}</td>
            </tr>
            <tr>
                <th>Delivery_at</th>
                <td>{{ card.deliveryAt ? card.deliveryAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ card.year }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('card_index') }}">back to list</a>

    <a href="{{ path('card_edit', {'id': card.id}) }}">edit</a>

