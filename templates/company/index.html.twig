{% extends 'base.html.twig' %}

{% block title %}Liste des sociétés{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Liste des sociétés</h1>
        <a href="{{ path('company_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-plus fa-sm text-white-50"></i> Ajouter société</a>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Société</th>
                <th>Téléphone</th>
                <th>Fax</th>
                <th>Director</th>
                <th>Portable</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for company in companies %}
                <tr>
                    <td><a href="{{ path('company_show', {'id': company.id}) }}">{{ company.name }}</a></td>
                    <td>{{ company.phone }}</td>
                    <td>{{ company.fax }}</td>
                    <td>{{ company.director }}</td>
                    <td>{{ company.mobile }}</td>
                    <td>
                        <a href="{{ path('company_edit', {'id': company.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(companies) }}
    </div>
{% endblock %}
