{{ form_start(form) }}
<div class="row">
    <div class="col">
        {{ form_row(form.title) }}
    </div>
    <div class="col">
        {{ form_row(form.location) }}
    </div>
</div>
<div class="row">
    <div class="col">
        {{ form_row(form.startDate) }}
    </div>
    <div class="col">
        {{ form_row(form.endDate) }}
    </div>
</div>
<div class="row">
    <div class="col">
        {{ form_row(form.description) }}
    </div>
</div>
<button class="btn btn-primary envoyer">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
